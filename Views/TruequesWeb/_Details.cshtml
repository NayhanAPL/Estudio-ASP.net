                    <dt>
                        Categor&iacute;a
                    </dt>
                    <dd>
                        @Model.Type
                    </dd>
                    <dt>
                        Propone
                    </dt>
              
                        @{
                            if (!string.IsNullOrEmpty(Model.Proposition) )
                            {
                            <dd>@Model.Proposition</dd>
                            }
                            else
                            {
                            <dd>-----</dd>
                            }
                        }
                
                    <dt>
                        Busca
                    </dt>

                    @{
                         if (!string.IsNullOrEmpty(Model.Search) )
                        {
                            <dd>@Model.Search</dd>
                        }
                        else
                        {
                            <dd>-----</dd>
                        }
                    }

                    <dt>
                        Info extra
                    </dt>
                    <dd>
                        @Model.ExtraInfo
                    </dd>
                </dl>
            </div>
