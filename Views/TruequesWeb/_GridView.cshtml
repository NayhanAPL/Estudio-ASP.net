@model IEnumerable<versión_5_asp.Models.Trueque>

<div class="col-sm-12">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Fecha
                </th>
                <th>
                    Usuario
                </th>
                <th>
                    Propone
                </th>
                <th>
                    Busca
                </th>
                <th>
                    Info Extra
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count() != 0){
                foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proposition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Search)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExtraInfo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="RequestTrueque" asp-route-id="@item.Id">Solicitar</a>
                </td>
            </tr>
            }
        }
            else{
                <tr>
                    <td colspan="3" class="text-center">No se encontraron resultados!</td>
                </tr>
            }

        </tbody>
    </table>
</div>