@model versión_5_asp.Models.Trueque

@{
    ViewData["Title"] = "Detalles";
}

@section css {
<link href="@Url.Content("~/css/login.css")" rel="stylesheet" />
}

<main role="main" class="app-content px-3" style="padding: calc(1rem*5); ">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="line-length-sm">        
            <article class="card p-5 pt-4">
                <h2 class="my-3">Detalles del trueque</h2>
                @*<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <span class="fa fa-times-circle"></span>
                    @TempData["ErrorMsg"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>*@

                <div class="d-flex flex-column align-items-center ">
                    <img class="img-fluid d-block rounded my-3" id="frame" src="~/Images/@Model.Image.ImageUrl" style="width:204px;height:auto;" />
                    <dl>
                        <dt>
                            Categor&iacute;a
                        </dt>
                        <dd>
                            @Model.Type
                        </dd>
                        <dt>
                            Propongo
                        </dt>
                        <dd>
                            @{
                            if (!string.IsNullOrEmpty(Model.Proposition) )
                            {
                            <dd>@Model.Proposition</dd>
                            }
                            else
                            {
                            <dd>-----</dd>
                            }
                        }
                        </dd>
                        <dt>
                            Busco
                        </dt>
                        <dd>
                            @{
                            if (!string.IsNullOrEmpty(Model.Search) )
                            {
                            <dd>@Model.Search</dd>
                            }
                            else
                            {
                            <dd>-----</dd>
                            }
                        }
                        </dd>
                        <dt>
                            Info extra
                        </dt>
                        <dd>
                            @Model.ExtraInfo
                        </dd>
                    </dl>
               </div>
              @*  <form class="mt-3">    
                  
                        <button asp-action="GetTruequesFromCurrentUser" class="btn btn-secondary btn-options mb-2" style="width:100%;">Volver</button>                  
                   
                </form>*@
            </article>
        </div>
</main>

