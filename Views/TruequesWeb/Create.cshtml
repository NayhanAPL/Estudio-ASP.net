@model versión_5_asp.Models.Trueque

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Trueque</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<versión_5_asp.Models.Type>()">
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proposition" class="control-label"></label>
                <input asp-for="Proposition" class="form-control" />
                <span asp-validation-for="Proposition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Search" class="control-label"></label>
                <input asp-for="Search" class="form-control" />
                <span asp-validation-for="Search" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExtraInfo" class="control-label"></label>
                <input asp-for="ExtraInfo" class="form-control" />
                <span asp-validation-for="ExtraInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image.ImageFile" class="control-label">Imágenes</label>
                <input asp-for="Image.ImageFile" class="form-control" />
                <span asp-validation-for="Image.ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@ViewData["PreviousUrl"]">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
