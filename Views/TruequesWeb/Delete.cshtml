@model versión_5_asp.Models.Trueque

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Está seguro de que desea eliminar este trueque?</h3>
<div>
    <h4>Trueque</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/Images/" + Model.Image.ImageUrl)" asp-append-version="true" width="250" height="180" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Proposition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Proposition)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Search)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Search)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExtraInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExtraInfo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="@ViewData["PreviousUrl"]">Regresar a la lista</a>
    </form>
</div>
