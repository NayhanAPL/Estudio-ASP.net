                    <dl>
                        <dt>
                            Categor&iacute;a
                        </dt>
                        <dd>
                            @Model.Type
                        </dd>
                        <dt>
                            Propongo
                        </dt>
                        <dd>
                            @Model.Proposition
                        </dd>
                        <dt>
                            Busco
                        </dt>
                        <dd>
                            @Model.Search
                        </dd>
                        <dt>
                            Info extra
                        </dt>
                        <dd>
                            @Model.ExtraInfo
                        </dd>
                    </dl>
               </div>
                <form class="mt-3" asp-action="Delete">
                    <input type="hidden" asp-for="Id"/>
                    <div class="justify-content-between">
                    <input type="submit" value="Borrar" class="btn btn-danger btn-options mb-2"/>      
                    <input asp-action="GetTruequesFromCurrentUser" type="submit" value="Cancelar" class="btn btn-secondary btn-options mb-2"/>                  
                    </div>
                </form>
            </article>
        </div>
</main>
