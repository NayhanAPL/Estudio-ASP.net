@model IEnumerable<versión_5_asp.Models.EnlaceHecho>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                Trueque Solicitado
            </th>
            <th>
                Trueque Propuesto
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @if (item.TruequeSu != null)
                {
                    <dl>                      
                        <dd>
                            <a asp-action="Details" asp-controller="TruequesWeb" asp-route-id="@item.TruequeSu.Id">Propone: @item.TruequeSu.Proposition /<br>Busca: @item.TruequeSu.Search</a>
                        </dd>
                    </dl>
                }
            </td>
            <td>
                @if (item.TruequeMi != null)
                {
                    <dl>
                        <dd>
                            <a asp-action="Details" asp-controller="TruequesWeb" asp-route-id="@item.TruequeMi.Id">Propone: @item.TruequeMi.Proposition /<br>Busca: @item.TruequeMi.Search</a>
                        </dd>
                    </dl>
                }
            </td>
            <td>|             
                <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
