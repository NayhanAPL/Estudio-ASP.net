        </li>
      </ul>
    </div>
       
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link"><span class="fa fa-sign-out-alt"></span> Salir</button>
            </form>
        </li>
    }
    else
    {    
         <li class="nav-item">
           <a asp-area="Identity" asp-page="/Account/Login" class="nav-link"><span class="fa fa-sign-in-alt"></span> Entrar</a>
         </li>
         <li class="nav-item">
           <a asp-area="Identity" asp-page="/Account/Register" class="nav-link">Registrarse</a>
